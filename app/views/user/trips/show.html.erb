<h1>My Trip To: <%= @trip.location %></h1>

<% @trip.events.each do |event| %>
  <h3>Event: <%= event.name %></h3></br>
<% end %>

<div class="form-wrapper">
  <%= form_tag '/email', method: :post do %>
    <div class="form-group">
      <div class="col-sm-3 my-1">
       <%= text_field_tag :recipients_email, nil, class:"form-control", id:"inlineFormInputName", placeholder: "Recipients email" %>
      </div>
    </div>
    <div class="col-auto my-1">
      <%= submit_tag "Send", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
